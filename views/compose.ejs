<%- include("partials/header") -%>


    <h1>Compose</h1>

    <form action="/compose" method="POST">
        <div class="form-group">
            <label for="title">Title</label>
            <input class="form-control" type="text" name="postTitle" autocomplete="off">
        </div>

        <div class="form-group">
            <label for="post">Post</label>
            <textarea name="postBody" rows="4" cols="50" class="form-control" autocomplete="off"></textarea>
        </div>

        <button type="submit" name="button" class="btn btn-primary">Publish</button>
    </form>


<%- include("partials/footer") -%>